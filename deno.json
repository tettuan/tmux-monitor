{
  "name": "@aidevtool/tmux-monitor",
  "version": "1.0.6",
  "description": "A comprehensive tmux monitoring tool with totality principles, real-time monitoring, and keyboard interrupt handling",
  "license": "MIT",
  "author": "tettuan",
  "keywords": [
    "tmux",
    "monitor",
    "terminal",
    "session",
    "pane",
    "typescript",
    "deno",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tettuan/tmux-monitor.git"
  },
  "exports": {
    ".": "./main.ts",
    "./lib": "./mod.ts"
  },
  "bin": {
    "tmux-monitor": "./main.ts"
  },
  "tasks": {
    "start": "deno run --allow-all main.ts",
    "dev": "deno run --allow-all --watch main.ts",
    "test": "deno test --allow-all",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts main.ts",
    "publish": "deno publish --allow-dirty",
    "ci": "./scripts/local_ci.sh",
    "coverage": "deno test --allow-all --coverage=coverage/ && deno coverage coverage/ --lcov --output=coverage/lcov.info",
    "bump": "./scripts/bump_version.sh",
    "bump:patch": "./scripts/bump_version.sh --patch",
    "bump:minor": "./scripts/bump_version.sh --minor",
    "bump:major": "./scripts/bump_version.sh --major"
  },
  "compilerOptions": {
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "fmt": {
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ]
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ]
  },
  "test": {
    "include": [
      "tests/",
      "src/tests/"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ]
  },
  "publish": {
    "include": [
      "mod.ts",
      "main.ts",
      "src/",
      "LICENSE",
      "README.md"
    ],
    "exclude": [
      "**/*_test.ts",
      "tests/",
      "scripts/",
      ".github/",
      ".vscode/",
      ".*",
      "CLAUDE.md",
      "docs/",
      "coverage/"
    ]
  }
}
